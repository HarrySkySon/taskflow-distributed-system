# ================================================
# TaskFlow - Environment Variables Example
# ================================================
# Copy this file to .env and update the values

# ================================================
# Projects Service Configuration
# ================================================
PORT=4002
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=projects_db
DB_USER=postgres
DB_PASSWORD=postgres

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672
QUEUE_NAME=project_events

# ================================================
# Notifications Service Configuration
# ================================================
NOTIFICATIONS_PORT=4004
NOTIFICATIONS_RABBITMQ_URL=amqp://guest:guest@localhost:5672
NOTIFICATIONS_QUEUE_NAME=project_events

# ================================================
# Docker Compose Overrides (Optional)
# ================================================
# COMPOSE_PROJECT_NAME=taskflow
# DOCKER_BUILDKIT=1
# COMPOSE_DOCKER_CLI_BUILD=1

# ================================================
# Monitoring (Optional)
# ================================================
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
# GRAFANA_ADMIN_PASSWORD=admin

# ================================================
# Load Testing (Optional)
# ================================================
# K6_BASE_URL=http://localhost:4002
# K6_VUS=100
# K6_DURATION=5m

# ================================================
# Security (Production)
# ================================================
# JWT_SECRET=your-secret-key-here
# API_KEY=your-api-key-here
# CORS_ORIGIN=https://yourdomain.com
